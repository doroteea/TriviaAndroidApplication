<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:layout_editor_absoluteX="-23dp"
    tools:layout_editor_absoluteY="8dp">

    <TextView
        android:id="@+id/questionId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:text="Question: "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/createdId1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="api"
        app:layout_constraintStart_toStartOf="@+id/createdId"
        app:layout_constraintTop_toBottomOf="@+id/createdId" />

    <TextView
        android:id="@+id/valueId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Value:"
        app:layout_constraintStart_toStartOf="@+id/answerId1"
        app:layout_constraintTop_toBottomOf="@+id/answerId1" />

    <TextView
        android:id="@+id/titleId1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="api"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/titleId"
        app:layout_constraintTop_toBottomOf="@+id/titleId"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/answerId1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="api"
        app:layout_constraintStart_toStartOf="@+id/answerId"
        app:layout_constraintTop_toBottomOf="@+id/answerId" />

    <TextView
        android:id="@+id/createdId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Created_at:"
        app:layout_constraintStart_toStartOf="@+id/valueId1"
        app:layout_constraintTop_toBottomOf="@+id/valueId1" />

    <TextView
        android:id="@+id/valueId1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="api"
        app:layout_constraintStart_toStartOf="@+id/valueId"
        app:layout_constraintTop_toBottomOf="@+id/valueId" />

    <TextView
        android:id="@+id/titleId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Category_title:"
        app:layout_constraintStart_toStartOf="@+id/createdId1"
        app:layout_constraintTop_toBottomOf="@+id/createdId1" />

    <TextView
        android:id="@+id/questionId1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ellipsize="none"
        android:maxLines="100"
        android:scrollHorizontally="false"
        android:text="api"
        app:layout_constraintStart_toStartOf="@+id/questionId"
        app:layout_constraintTop_toBottomOf="@+id/questionId" />

    <TextView
        android:id="@+id/answerId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Answer:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/questionId1" />

</androidx.constraintlayout.widget.ConstraintLayout>